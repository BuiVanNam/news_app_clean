<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/padding_small_default"
    android:paddingVertical="@dimen/padding_default">

    <TextView
        android:id="@+id/title_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_small_default"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/thumb_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/des_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/padding_small_default"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/des_text_size"
        app:layout_constraintEnd_toStartOf="@+id/thumb_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_new" />

    <TextView
        android:id="@+id/publisher_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/padding_small_default"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/publisher_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thumb_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/des_new" />

    <ImageView
        android:id="@+id/thumb_image"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/width_image_thumb_article"
        android:layout_height="@dimen/height_image_thumb_article"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>