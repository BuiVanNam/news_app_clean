<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_bottom_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar_bottom_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_navigation"
        android:layout_gravity="bottom"
        android:background="@color/colorBackgroundNav"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/nav_bar_bottom_main" />

</FrameLayout>